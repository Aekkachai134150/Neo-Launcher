<com.saggitt.omega.search.HotseatQsbWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qsb_widget_height"
    android:layout_gravity="bottom|center"
    android:background="@drawable/bg_qsb_click_feedback"
    android:contentDescription="@string/title__general_search">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/g_icon"
        android:layout_width="@dimen/qsb_mic_width"
        android:layout_height="match_parent"
        android:layout_gravity="start|center"
        android:layout_marginTop="-6.0dip"
        android:layout_marginBottom="-6.0dip"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_qsb_logo" />

    <FrameLayout
        android:id="@+id/mic_frame"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mic_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_marginTop="-6.0dip"
            android:layout_marginBottom="-6.0dip"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/label_voice_search"
            android:focusable="false"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_qsb_mic" />
    </FrameLayout>

    <include layout="@layout/qsb_hint" />
</com.saggitt.omega.search.HotseatQsbWidget>