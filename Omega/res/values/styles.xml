<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/LauncherTheme">
        <item name="alertDialogTheme">@style/AlertDialogLight</item>
    </style>

    <style name="AppTheme.DarkText" parent="@style/LauncherTheme.DarkText" />

    <style name="AppTheme.DarkMainColor" parent="@style/LauncherTheme.DarkMainColor" />

    <style name="AppTheme.Dark" parent="@style/LauncherTheme.Dark" />

    <style name="AppTheme.Dark.DarkText" parent="@style/LauncherTheme.Dark.DarkText" />

    <style name="AppTheme.Dark.DarkMainColor" parent="@style/LauncherTheme.Dark.DarkMainColor" />

    <style name="AppTheme.Black" parent="AppTheme.Dark">
        <item name="android:colorPrimary">#000000</item>
        <item name="allAppsScrimColor">#EA000000</item>
        <item name="allAppsNavBarScrimColor">#80000000</item>
        <item name="popupColorPrimary">?android:attr/colorPrimary</item>
        <item name="popupColorSecondary">#000000</item>
        <item name="popupColorTertiary">#212121</item>
        <item name="widgetsTheme">@style/WidgetContainerTheme.Black</item>
        <item name="isMainColorDark">true</item>
        <item name="folderFillColor">#DD000000</item>
        <item name="folderIconBorderColor">#FF000000</item>
    </style>

    <style name="AppTheme.Black.DarkText" parent="@style/AppTheme.Black" />

    <style name="SettingsTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="settingsBackground">@android:color/white</item>
        <item name="settingsSearchBackground">?settingsBackground</item>
        <item name="useLightSystemBars">true</item>
        <item name="alertDialogTheme">@style/AlertDialogLight</item>
    </style>

    <style name="SettingsTheme.Light" parent="SettingsTheme">

    </style>

    <style name="SettingsTheme.Dark" parent="SettingsTheme"></style>

    <style name="SettingsTheme.Black" parent="SettingsTheme"></style>

    <style name="AlertDialogLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_material_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/SettingsTheme.Button</item>
        <item name="android:buttonStyle">@style/SettingsTheme.Button</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:dialogCornerRadius" tools:ignore="NewApi">16dp</item>
    </style>

    <style name="SettingsTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogLight</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Settings.SearchBar" parent="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/search_bar_text_size</item>
    </style>

    <style name="TextAppearance.TileTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="customFontType">settingsTileTitle</item>
    </style>

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small" />

    <style name="SettingsTheme.PreferenceTheme.Preference.Title" parent="@style/TextAppearance.AppCompat.Subhead" />

    <style name="WidgetContainerTheme.Black" parent="AppTheme.Black">
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="bottomSheetNavBarColor">#00000000</item>
    </style>
</resources>